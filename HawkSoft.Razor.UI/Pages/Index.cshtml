@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


    <div class="form-group">
        <label for="inputSpeaker" class="col-sm-2 control-label">
            Business Contacts
        </label>
        
    </div>
    <div style="height:400px;overflow-y:scroll">
        <table class="table table-bordered table-condensed table-hover">
            <tr class="warning">
                <td></td>
                <td></td>
                <td>Name</td>
                <td>Email</td>
                <td>Address</td>
            </tr>
            @foreach (var contact in Model._businessContacts)
            {
                <tr>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@contact.Id">Edit</a>
                        @Html.HiddenFor(it => contact.UserId)
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="contact.UserId">Delete</a>
                        @Html.HiddenFor(it => contact.UserId)
                    </td>
                    <td>
                        @contact.Name
                        @Html.HiddenFor(it => contact.Name)
                    </td>
                    <td>
                        @contact.Email
                        @Html.HiddenFor(it => contact.Email)
                    </td>
                    <td>
                        @contact.StreetName @contact.City, @contact.State
                    </td>
                </tr>
            }
        </table>
        </div>

        <div class="form-group">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-info">
                    <span class="glyphicon glyphicon-ok"></span>Add New Contact
                </button>
            </div>
        </div>

        
